<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HintActivity">

    <TextView
        android:id="@+id/textHintText"
        android:layout_width="369dp"
        android:layout_height="62dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="177dp"
        android:text="@string/textHint"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Text Will Appear Here!" />

    <Button
        android:id="@+id/btnShowHint"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginStart="159dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="164dp"
        android:onClick="onClickRevealHint"
        android:text="@string/btnReveal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHintText"
        tools:text="Button" />
</androidx.constraintlayout.widget.ConstraintLayout>